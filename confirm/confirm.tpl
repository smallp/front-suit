<div class="sys-div-confirm">
    <div class="confirm-content">
        <div class="confirm-header clearfix">
            <h3><i class="confirm-alert"><!-- 警告 --></i>提示</h3>
            <i class="confirm-close">&times;</i>
        </div>
        <div class="confirm-body">
            <span id="confirm-message"></span>
        </div>
        <div class="confirm-footer clearfix">
            <button class="confirm-dismiss">关闭</button>
            <button class="confirm-sure" id="confirm-btn">确定</button>
        </div>
    </div>
</div>
<div class="confirm-mask"><!-- 遮罩 --></div>